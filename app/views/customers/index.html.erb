<table>
  <thead>
    <tr>
      <th align=left><%= t 'listing_customers.table.name' %></th>
      <th><%= t 'listing_customers.table.discount' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.discount %></td>
        <td><%= link_to (t 'listing_customers.links.show'), customer %></td>
        <td><%= link_to (t 'listing_customers.links.edit'), edit_customer_path(customer) %></td>
        <td><%= link_to (t 'listing_customers.links.destroy'), customer,
            method: :delete, data: { confirm: (t 'listing_customers.links.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

